<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Smart_Boutique" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Botón general -->
    <style name="generalButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/button_general</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Botón regresar -->
    <style name="returnButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableLeft">@drawable/ic_return</item>
    </style>

    <!-- Botón editar -->
    <style name="editButton" parent="returnButton">
        <item name="android:drawableLeft">@drawable/ic_edit</item>
    </style>

    <!-- Estilo para títulos -->
    <style name="header_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <!-- Estilo para etiquetas -->
    <style name="config_account_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <!-- Campo de entrada con mínimo de 48dp -->
    <style name="config_account_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <!-- Configuración de botones internos -->
    <style name="configButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <!-- Tema alternativo -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

</resources>
